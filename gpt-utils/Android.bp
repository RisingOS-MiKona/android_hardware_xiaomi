cc_defaults {
    name: "libgptutils.xiaomi",
    export_include_dirs: ["."],
    header_libs: ["generated_kernel_headers"],
    recovery_available: true,
    shared_libs: [
        "libcutils",
        "liblog",
        "libz",
    ],
    srcs: [
        "gpt-utils.cpp",
        "recovery-ufs-bsg.cpp",
    ],
    vendor: true,
}

cc_library {
    name: "libgptutils-sg.xiaomi",
    defaults: ["libgptutils.xiaomi"],
}

cc_library {
    name: "libgptutils-bsg.xiaomi",
    defaults: ["libgptutils.xiaomi"],
    cflags: ["-D_BSG_FRAMEWORK_KERNEL_HEADERS"],
}
